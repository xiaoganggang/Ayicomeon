                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="状态变换"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_shuaxinstate"
